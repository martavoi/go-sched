{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Simple Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/simple/main.go",
            "env": {},
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Mongo Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/mongo/main.go",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Couchbase Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/couchbase/main.go",
            "env": {
                "COUCHBASE_URI": "couchbase://localhost",
                "COUCHBASE_USERNAME": "Administrator",
                "COUCHBASE_PASSWORD": "password"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        }
    ]
}
