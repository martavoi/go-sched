{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go Scheduler",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Go Scheduler (with args)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": [],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "console": "integratedTerminal"
        }
    ]
}
